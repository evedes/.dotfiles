conky.config = {
  pad_percents = 3,
  double_buffer = true,
  minimum_width = 400,
  font = 'DejaVu Sans Mono:size=10',
  use_xft = true,
  alignment = 'top_right',
  gap_y = 31,
  own_window = true,
  own_window_transparent = false,
  own_window_argb_visual = true,
  own_window_argb_value = 80,
  own_window_hints = 'undecorated,below,skip_taskbar,skip_pager,sticky',
  update_interval = 3,
  default_shade_color = 000000
}

conky.text = [[
User: Edo | Uptime: ${uptime}
${hr}
Hostname: ${color}${nodename}
Kernel: ${sysname} ${kernel} ${machine}
${exec /usr/lib/update-notifier/apt-check --human-readable}
${hr}
${color orange}CPU: ${color}  ${freq_g} GHz
01:  ${cpu cpu1}% ${cpubar 5,60 cpu1} 02: ${cpu cpu2}% ${cpubar 5,60 cpu2} 03: ${cpu cpu3}% ${cpubar 5,60 cpu3}
04:  ${cpu cpu4}% ${cpubar 5,60 cpu4} 05: ${cpu cpu5}% ${cpubar 5,60 cpu5} 06: ${cpu cpu6}% ${cpubar 5,60 cpu6}
07:  ${cpu cpu7}% ${cpubar 5,60 cpu7} 08: ${cpu cpu8}% ${cpubar 5,60 cpu8} 09: ${cpu cpu9}% ${cpubar 5,60 cpu9}
10:  ${cpu cpu10}% ${cpubar 5,60 cpu10} 11: ${cpu cpu11}% ${cpubar 5,60 cpu11} 12:${cpu cpu12}% ${cpubar 5,60 cpu12}
${cpugraph}
${hr}
Name              PID          CPU%       MEM
${top name 1}  ${top pid 1}      ${top cpu 1}     ${top mem 1}
${top name 2}  ${top pid 2}      ${top cpu 2}     ${top mem 2}
${top name 3}  ${top pid 3}      ${top cpu 3}     ${top mem 3}
${top name 4}  ${top pid 4}      ${top cpu 4}     ${top mem 4}
${hr}
Load average: ${loadavg}
Processes: ${processes} | Running: ${running_processes}
${hr}
RAM:${color}${mem} of ${memmax}
${memperc}% ${membar 10}
Swap: ${swap}/${swapmax}
${swapperc}% ${swapbar 10}
${memgraph}
${hr}
SSD: ${fs_used} ${fs_size} ${fs_bar 10 }
${hr}
IP:   ${addr enp6s0}
Up:   ${upspeed enp6s0}
Down: ${downspeed enp6s0}
]]
