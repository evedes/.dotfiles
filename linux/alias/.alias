# SYSTEM 

alias cl='clear'
alias reload='source ~/.zshrc'
alias theme='bash -c  "$(wget -qO- https://git.io/vQgMr)"'
alias x='exit'

# PBCOPY / PBPASTE
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'


# NETWORK PRIORITY

alias meo='sudo ifmetric enp8s0 10; sudo ifmetric enp9s0 10; sudo ifmetric wlp6s0 100 & isp; sudo ifmetric br-b24bb6ddc4c0 100'
alias vodafone='sudo ifmetric wlp6s0 10; sudo ifmetric br-b24bb6ddc4c0 10; sudo ifmetric enp8s0 100 & isp; sudo ifmetric enp9s0 100'
alias isp='curl ipinfo.io | grep org'

# GIT

alias gll="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gsl="git stash list"

# NPM 
alias npmg='npm list -g --depth 0'

# FAMILYTHINGS
alias ft='code ~/SideProjects/familythings/frontend && code ~/SideProjects/familythings/backend'

# WORK
alias idm='cd ~/Work/idm'
alias dms='cd ~/Work/dms'
alias pv='cd ~/Work/package-viewer'
alias dt='cd ~/Work/deployer'
alias she='cd ~/Work/shearer'
alias fs='cd ~/Work/flashshare'
alias ss='cd ~/Work/shearer-services'
alias sh='cd ~/Work/shearer'

# DOCKER
alias dps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.RunningFor}}\t{{.Status}}"'
alias dpa='docker ps -a --format "table {{.ID}}\t{{.Names}}\t{{.RunningFor}}\t{{.Status}}"'
alias dcd='docker-compose down --remove-orphans'
alias di='docker images'

export VFORMAT="ID\t{{.ID}}\nNAME\t{{.Names}}\nIMAGE\t{{.Image}}\nPORTS\t{{.Ports}}\nCOMMAND\t{{.Command}}\nCREATED\t{{.CreatedAt}}\nSTATUS\t{{.Status}}\n"
alias dpsv='docker ps --format="$VFORMAT"'
alias dpav='docker ps -a --format="$VFORMAT"'

# SPEED TEST
alias sp='speedtest --secure'

# K8S
alias k=kubectl
alias mk=minikube
